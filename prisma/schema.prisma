generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int              @id @default(autoincrement())
  name        String
  description String
  price       Float
  category    String
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  slug        String           @unique
  images      ProductImage[]
  variants    ProductVariant[]
  items       OrderItem[]
}

model ProductImage {
  id        Int     @id @default(autoincrement())
  url       String
  productId Int
  product   Product @relation(fields: [productId], references: [id])
}

model ProductVariant {
  id        Int          @id @default(autoincrement())
  productId Int
  colorId   Int
  sizeId    Int
  stock     Int          @default(0)
  color     VariantColor @relation(fields: [colorId], references: [id])
  product   Product      @relation(fields: [productId], references: [id])
  size      VariantSize  @relation(fields: [sizeId], references: [id])
}

model VariantColor {
  id       Int              @id @default(autoincrement())
  name     String
  hex      String
  image    String?
  variants ProductVariant[]
}

model VariantSize {
  id       Int              @id @default(autoincrement())
  name     String
  range    String?
  variants ProductVariant[]
}

model Order {
  id            Int         @id @default(autoincrement())
  customerName  String
  customerEmail String
  status        String       // pendente, processando, envio, entregue
  total         Float
  createdAt     DateTime     @default(now())
  items         OrderItem[]
}

model OrderItem {
  id        Int      @id @default(autoincrement())
  orderId   Int
  productId Int
  quantity  Int       @default(1)
  price     Float
  order     Order     @relation(fields: [orderId], references: [id])
  product   Product   @relation(fields: [productId], references: [id])
}
